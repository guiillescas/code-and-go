{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals",
    "@rocketseat/eslint-config/react"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-import-helpers"
  ],
  "rules": {
    "endOfLine": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        // example configuration
        "newlinesBetween": "always",
        "groups": [
          [
            "/^react//",
            "/^react$/",
            "/^next//"
          ],
          [
            "module",
            "/^styled-components/",
            "/(@)/"
          ],
          "/(app)/",
          "/(components)/",
          "/(constants)/",
          [
            "/(contexts)/",
            "/(hooks)/"
          ],
          "/(services)/",
          "/(layouts)/",
          "/(lib)/",
          "/(data)/",
          "/(tokens)/",
          "/(styles)/",
          "/(assets)/",
          "/(public)/"
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
    "no-unused-vars": "off"
  }
}
