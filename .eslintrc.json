{
  "extends": [
    "next/core-web-vitals",
    "@rocketseat/eslint-config/react"
  ],
  "plugins": [
    "eslint-plugin-import-helpers"
  ],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          [
            "/^react//",
            "/^react$/",
            "/^next//"
          ],
          [
            "module",
            "/^styled-components/",
            "/(@)/"
          ],
          "/(app)/",
          "/(components)/",
          "/(constants)/",
          [
            "/(contexts)/",
            "/(hooks)/"
          ],
          "/(services)/",
          "/(lib)/",
          "/(data)/",
          "/(tokens)/",
          "/(styles)/",
          "/(assets)/",
          "/(public)/"
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
  }
}